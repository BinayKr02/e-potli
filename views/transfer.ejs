        <script>
            document.getElementById("form").addEventListener("submit", (e)=>
            {
                e.preventDefault();
                var form = document.getElementById("form")
                var data = new URLSearchParams(new FormData(form));
                fetch("/transfer", {method: "POST",body: data}).then(res=>{
                    return res.json()
                }).then((f_res)=>{
                    alert(f_res.message)
